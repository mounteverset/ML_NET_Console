<Window x:Class="GUIandStatistics.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GUIandStatistics"
        mc:Ignorable="d"
        Title="Datenanalyse mit neuronalen Netzen" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*" />
            <ColumnDefinition Width="5*" />
            <ColumnDefinition Width="2*" />
            <ColumnDefinition Width="5*" />
            <ColumnDefinition Width="1*" />
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="1*" />
            <RowDefinition Height="2*" />
            <RowDefinition Height="1*" />
            <RowDefinition Height="2*" />
            <RowDefinition Height="1*" />

        </Grid.RowDefinitions>
            
        <Button x:Name ="trainAndTestButton" Content="Modell trainieren und testen" Grid.Column="1" Grid.Row="2" Height="19" Width="160" Background="BlanchedAlmond" />
        <Button x:Name ="useModel" Content="Modell verwenden" Grid.Column="3" Grid.Row="2" Height="19" Width="160" Background="BlanchedAlmond" />
    </Grid>
</Window>
